<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:transitionName="book_detail"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/etBookNameDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:paddingStart="8dp"
                    android:text="Name"
                    android:textColor="#03A9F4"
                    android:textSize="48sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnBackDetail"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/etBookNameDetail"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="1dp"
                    android:drawableBottom="@drawable/baseline_keyboard_arrow_down_24"
                    android:text="@string/back"
                    android:textScaleX="0" />

            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivBookDetail"
            style="@style/parent"
            android:layout_margin="4dp"
            android:scaleType="centerCrop"
            android:transitionName="book_detail"
            app:srcCompat="@drawable/toi_tu_hoc_top_sach_hay_cho_hoc_sinh_sinh_vien_69ca39f78c" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:hint="@string/author"
            app:startIconDrawable="@drawable/round_contacts_24"
            android:paddingTop="8dp"
            >

            <EditText
                android:id="@+id/etBookAuthorDetail"
                style="@style/parent"
                android:layout_weight="1"
                android:ems="10"
                android:focusable="false"
                android:inputType="text"
                android:text="Name"
                android:textSize="24sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:hint="@string/description"
            app:startIconDrawable="@drawable/twotone_description_24"
            android:paddingTop="8dp"
            >

            <EditText
                android:id="@+id/etBookDescriptionDetail"
                style="@style/parent"
                android:layout_weight="1"
                android:ems="10"
                android:focusable="false"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:text="name"
                android:textSize="24sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:hint="@string/price"
            app:startIconDrawable="@drawable/round_attach_money_24"
            android:paddingTop="8dp"
            >

            <EditText
                android:id="@+id/etBookPriceDetail"
                style="@style/parent"
                android:layout_weight="1"
                android:ems="10"
                android:focusable="false"
                android:inputType="text"
                android:text="Name"
                android:textSize="24sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:hint="@string/rating"
            app:startIconDrawable="@drawable/twotone_star_rate_24"
            android:paddingTop="8dp"
            >

            <EditText
                android:id="@+id/etBookRatingDetail"
                style="@style/parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:text="Name"
                android:textSize="24sp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>